<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ sitename }}</title>
    <!-- Load bootstrap theme -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap-theme.min.css">
    <link rel='stylesheet' href='stylesheets/style.css' />

    <script src="//code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>

    <!-- Load socket.io -->
    <script src="socket.io/socket.io.js"></script>

    <!-- Load custom scripts -->
    <script src="javascripts/script.js"></script>
  </head>
  <body>
    <!-- Wrap all page content here -->
    <div id="wrap" class="container">
      <!-- Login form -->
      <form class="form-signin" role="form">
        <h2 class="form-signin-heading">Sign in <small>{{ sitename }}</small></h2>
        <input type="text" class="form-control username" placeholder="Username" required autofocus>
        <input type="password" class="form-control password" placeholder="Password" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>

      <div class="message text-center"><p><!-- Message --></p></div>
    </div>

    <div id="footer">
      <div class="container">
        <p class="text-center">{{ sitename }}<br />Publishing information proxy</p>
      </div>
    </div>
  </body>
</html>
